package socialmedia;

public class Post {

    private static int lastId = 999;
    private int postId;
    private Account account; // hi martha the main issue is with the account part \_0_0_/ (attempt at emoji)
    private String handle;
    private String message;

    /**
     * creates post with an account and message
     * @param handle
     * @param message
     */
    public Post(String handle, String message) {
        this.postId = ++Post.lastId;
        if (this.account != null) {
            account.setHandle(handle);
        }
        this.message = message;
    }

    /** check whether the String is valid, i.e. not null, blank, or less than or equal to 100 characters
     *
     * @param str
     * @return true if the String is valid, false if not
     */
    private boolean isValidMessage(String str) {
        if (str != null && !str.isBlank() && str.length() <= 100) {
            return true;
        } else {
            System.err.printf("%s - is an invalid message.%n", str);
            return false;
        }
    }

    // setter methods

    /** set account associated with post
     *
     * @param account to set
     */
    public void setAccount(Account account) {
        this.account = account;
    }


    /** set account handle associated with post
     *
     * @param handle to set
     * @return handle
     */
    public String setHandle(String handle) {
        if (isValidString(handle)) {
            this.handle = handle;
        } else {
            System.exit(1);
        }
        return handle;
    }

    /** set a post message if it is a valid string
     *
     * @param message to set
     */
    public String setMessage(String message) {
        if (isValidString(message)){
            this.message = message;
        } else {
            System.exit(1);
        }
    }
    
    /**
    * set post ID number
    * @param id to set
    */
    public int setPostId(int postID) {
        this.postId = postId;
    }

    // getter methods

    /**
     *
     * @return id
     */
    public int getId() {
        return id;
    }


    /**
     *
     * @return account
     */
    public Account getAccount() {
        return account;
    }


    /**
     *
     * @return message
     */
    public String getMessage() {
        return message;
    }
}
